# ==============================================================================
# EgoLlama Gateway - Environment Variables
# ==============================================================================

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ego
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Gateway Configuration
GATEWAY_PORT=8082
GATEWAY_WORKERS=4
GATEWAY_RELOAD=false

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_POSTGRESQL=true
ENABLE_REDIS=true
ENABLE_GRACEFUL_DEGRADATION=true

# Database Connection Pool (optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Cache Configuration (optional)
CACHE_TTL_SHORT=5
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600
CACHE_TTL_SESSION=86400

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BLOCK_DURATION=3600

# Security Configuration (recommended for production)
# API Key Authentication
EGOLLAMA_API_KEY=
EGOLLAMA_REQUIRE_API_KEY=false

# CORS Configuration (prevents drive-by attacks)
EGOLLAMA_CORS_ORIGINS=http://localhost:9000,http://localhost:3000,http://127.0.0.1:9000,http://127.0.0.1:3000

# Server Binding
EGOLLAMA_HOST=127.0.0.1
EGOLLAMA_PORT=8082








