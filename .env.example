# EgoLlama Gateway Configuration

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ego
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8082
GATEWAY_WORKERS=4

# Features
ENABLE_POSTGRESQL=true
ENABLE_REDIS=true
ENABLE_GRACEFUL_DEGRADATION=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
